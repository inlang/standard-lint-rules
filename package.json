{
  "name": "@inlang/standard-lint-rules",
  "type": "module",
  "module": "dist/index.js",
  "engines": {
    "node": "^18"
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:watch\" \"npm run dev:test\"",
    "dev:test": "vitest",
    "dev:watch": "DEV=true tsx ./esbuild.ts",
    "build": "tsx ./esbuild.ts",
    "test": "vitest run",
    "prepare": "husky install"
  },
  "dependencies": {
    "@inlang/core": "^0.3.1"
  },
  "devDependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.10",
    "glob": "^9.0.1",
    "husky": "^8.0.3",
    "memfs": "^3.4.13",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "vitest": "^0.29.1"
  }
}
